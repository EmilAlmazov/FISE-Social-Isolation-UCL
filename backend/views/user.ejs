    <div class="w-full md:w-1/3 my-6 md:my-1">
      <button
        class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
      >
        Update Info
      </button>
    </div>
  </form>

  <h2
    class="leading-normal text-base md:text-2xl mb-8 text-center md:text-left slide-in-bottom-subtitle pt-20"
  >
    Contacts
  </h2>
  <table class="table-fixed">
    <thead>
      <tr>
        <th class="w-1/2 px-4 py-2">Name</th>
        <th class="w-1/4 px-4 py-2">Email</th>
        <th class="w-1/4 px-4 py-2">Relation</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < user.contacts.length; i++) { %>
      <tr>
        <td class="border px-4 py-2"><%= user.contacts[i].firstName %></td>
        <td class="border px-4 py-2"><%= user.contacts[i].email %></td>
        <td class="border px-4 py-2">
          <%= capitalizeFirstLetter(relationMappings[user.contacts[i].relation])
          %>
        </td>
        <td class="border px-4 py-2">
          <a
            href="/dashboard/<%= user._id %>/<%= user.contacts[i]._id %>"
            class="text-blue-600 underline font-bold"
            >Edit</a
          >
        </td>
        <td class="border px-4 py-2">
          <form
            id="deleteContact"
            action="/api/contacts/delete/<%= user.contacts[i]._id %>"
            method="post"
          >
            <div class="w-full md:w-1/3 my-6 md:my-1">
              <button
                class="border border-red-600 text-red-600 hover:bg-red-600 hover:text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline bg-transparent"
              >
                DELETE
              </button>
            </div>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <div class="w-full md:w-1/3 my-6 md:my-1 py-2">
    <a
      href="/dashboard/manager/<%= user._id %>/contact/new"
      class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
    >
      + Add a new Contact
    </a>

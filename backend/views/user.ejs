<%- include("./templates/header.ejs", {title: "Dashboard"}) %>

<div class="m-6">
    <h1
        class="my-4 text-3xl md:text-5xl text-blue-800 font-bold leading-tight text-center md:text-left slide-in-bottom-h1"
    >
        Hello there <%= name %>!
    </h1>

    <div class="w-full md:w-1/3 my-6 md:my-1">
        <a
            class="border border-red-600 text-red-600 hover:bg-red-600 hover:text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline bg-transparent"
            href="/logout"
        >
            Log Out
        </a>
    </div>

    <form class="w-full max-w-3" action="/users" method="POST">
        <div class="flex flex-wrap -mx-3 mb-6 m-6">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                <label
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    for="grid-last-name"
                >
                    Your First Name
                </label>
                <input
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                    id="firstName"
                    type="text"
                    value="<%= name %>"
                />
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                <label
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    for="grid-last-name"
                >
                    Your Email Address
                </label>
                <input
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                    id="email"
                    type="text"
                    value="<%= email %>"
                />
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
            
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                <label
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    for="grid-state"
                >
                    Background Image
                </label>
                <div class="relative">
                    <select
                        class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                        id="imageVideoUrl"
                    >
                        <option>Park</option>
                        <option>Beach</option>
                        <option>Underwater</option>
                    </select>
                    <div
                        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
                    >
                        <svg
                            class="fill-current h-4 w-4"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                        >
                            <path
                                d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                            />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-full md:w-1/3 my-6 md:my-1">
            <a
                class=" bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline "

            >
                Update Changes
            </a>
        </div>
        
    </form>
    <h2
            class="leading-normal text-base md:text-2xl mb-8 text-center md:text-left slide-in-bottom-subtitle"
        >
            Users Managed by You
        </h2>
        <table class="table-fixed">
            <thead>
              <tr>
                <th class="w-1/2 px-4 py-2">Name</th>
                <th class="w-1/4 px-4 py-2">Login Code</th>
                <th class="w-1/4 px-4 py-2">Views</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<users.length; i++) {%>
                    <tr>
                        <td class="border px-4 py-2"><%= users[i].firstName %></td>
                        <td class="border px-4 py-2"><%= users[i].otc %></td>
                        <td class="border px-4 py-2"><a href="/api/user/<%= users[i].id %>">Edit</a></td>
                    </tr>
                 <% } %>
            </tbody>
          </table>
</div>

<%- include("./templates/footer.ejs") %>

<%- include("./templates/header.ejs", {title: "Dashboard"}) %>
<div id="content" class="m-6 flex-1">
  <div class="w-full md:w-1/3 my-6 md:my-1">
    <ol class="list-reset flex text-grey-dark">
      <li><a href="/dashboard" class="underline">Dashboard</a></li>
      <li><span class="mx-2">/</span></li>
      <li>
        <a href="/dashboard/<%= user._id %>" class="underline"
          ><%= user.firstName %>
        </a>
      </li>
      <li><span class="mx-2">/</span></li>
      <li class="font-bold">New Contact</li>
    </ol>
  </div>

  <h1
    class="my-4 text-3xl md:text-5xl text-blue-800 font-bold leading-tight text-center md:text-left slide-in-bottom-h1"
  >
    Add a New Contact for <%= user.firstName %>
  </h1>

  <div class="w-full md:w-1/3 my-6 md:my-1">
    <a
      class="border border-red-600 text-red-600 hover:bg-red-600 hover:text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline bg-transparent"
      href="/logout"
    >
      Log Out
    </a>
  </div>

  <form
    id="newContact"
    class="w-full max-w-3"
    action="/api/contacts/new/<%= user._id %>"
    method="POST"
    
  >
    <div class="flex flex-wrap -mx-3 mb-6 m-6">
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="firstName"
        >
          Contact's First Name
        </label>
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          id="firstName"
          name="firstName"
          type="text"
        />
      </div>
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="avatarImage"
        >
          Contact's Avatar Image (optional)
        </label>
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          id="avatarImage"
          name="avatarImage"
          type="text"
        />
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="email"
        >
          Contact's Email
        </label>
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          id="email"
          name="email"
          type="text"
        />
      </div>
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <label
          class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
          for="grid-state"
        >
          Contact's Relation to <%= user.firstName %>
        </label>
        <select
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          id="relation"
          name="relation"
        >
        <% const
relationMappings = [ "mother", "father", "grandmother", "grandfather", "aunt",
"uncle", "sister", "brother", "daughter", "son", "granddaughter", "grandson", ];
function capitalizeFirstLetter(string) { return string.charAt(0).toUpperCase() +
string.slice(1); } %>
          <option disabled selected value>-- select an option --</option>
          <% for (var i=0; i<relationMappings.length; i++) { %>
          <option> <%= capitalizeFirstLetter(relationMappings[i]) %> </option>
          <% } %>
        </select>
        <div
          class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
        >
          <svg
            class="fill-current h-4 w-4"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
          >
            <path
              d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
            />
          </svg>
        </div>
      </div>
    </div>
    <div class="w-full md:w-1/3 my-6 md:my-1">
      <button
        class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
      >
        Add Contact
      </button>
    </div>
  </form>
</div>
<%- include("./templates/footer.ejs") %>
